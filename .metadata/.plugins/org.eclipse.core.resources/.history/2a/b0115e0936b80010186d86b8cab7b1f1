package com.zozofood.dao;

import java.util.List;
import java.util.Optional;

import org.springframework.data.domain.Pageable;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.zozofood.model.Restaurant;

public interface RestaurantRepository extends JpaRepository<Restaurant, Long> {

	Optional<Restaurant> findByRestaurantId(Long restaurantId);
	
	@Query("SELECT r FROM Restaurant r " +
		       "WHERE (:keyword IS NULL OR " +
		       "LOWER(r.restaurantName) LIKE LOWER(CONCAT('%', :keyword, '%')) OR " +
		       "LOWER(r.restaurantAddress.city) LIKE LOWER(CONCAT('%', :keyword, '%')))") 
	List<Restaurant>   searchRestaurantsByKeyword(@Param("keyword") String keyword, Pageable pageable);


	

}
