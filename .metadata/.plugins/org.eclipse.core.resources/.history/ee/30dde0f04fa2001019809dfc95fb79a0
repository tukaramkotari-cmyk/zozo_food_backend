package com.zozofood.entity;

import jakarta.persistence.Entity;
import jakarta.persistence.Table;
import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;
import com.zozofood.application.RestaurantManagmentApplication;
import com.zozofood.restaurantEntity.Item;

@Entity
@Table
@Data
@AllArgsConstructor
@NoArgsConstructor
public class OrderItems {
	
	private Long id;
	
	private long itemId;			// reference to MenuItem
	
	private int quantity;		// quantity ordered
	
	private Double price;		// price per item
	
	private Double totalPrice;	// total price for this item (quantity * price)

}
